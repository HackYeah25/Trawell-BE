# Application Settings
APP_NAME=Travel AI Assistant
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
PORT=8000
HOST=0.0.0.0

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Database (if using direct PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/travel_ai

# Authentication
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs
SKYSCANNER_API_KEY=your_skyscanner_api_key_here
WEATHER_API_KEY=your_weather_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_FLIGHTS_API_KEY=your_google_flights_api_key_here

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# LangChain Settings
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=travel-ai-assistant

# LLM Configuration
DEFAULT_LLM_MODEL=gpt-4-turbo-preview
DEFAULT_LLM_TEMPERATURE=0.7
MAX_TOKENS_CONTEXT=8000
MAX_TOKENS_RESPONSE=2000

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
